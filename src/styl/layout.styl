body
  background-color #f5f5f5
  line-height 1.6

.container 
  max-width 800px
  margin 0 auto

.sitename
  font-size 16px
  float left
  a 
    display block
    text-height 44px
    &:hover
      text-decoration none

.gray 
  color #8B909A

.gray-2
  color #999

.gray-1
  color #656a74 !important

.gray-3
  color #c2c4c9 !important

.cursor
  cursor pointer

.red
  color #EC3750

.single
  margin-top 30px

// header
.header
  text-height 44px
  //border-bottom 1px solid #e2e2e2
  box-shadow(0px 1px 0px rgba(100,100,100,0.2))
  background-color white
  position fixed
  top 0
  left 0
  right 0
  z-index 999
  a 
    color #556
  .navbar-right>li>a 
    border-bottom 1px solid transparent
    &:hover
      color #778087
      border-bottom-color @color

.welcome
  padding 30px 0
  background-color white
  border-bottom 1px solid #e2e2e2
  .slogan
    font-size 20px
  .description
    color #999
    margin 10px 0

.wrap 
  padding-top 44px

.main
  min-height 300px

.date-header
  font-size 16px
  padding 20px 0
  color #999
  h3
    font-size @font-size
    float left

.form-scale
  background-color white
  width 70%
  margin 20px auto
  padding 20px
  border-radius 3px
  border 1px solid #e2e2e2

.top-avatar
  border-radius 2px 
  width 28px
  height @width

.ideas 
  margin-top 20px

.one-idea
  box-shadow(0 0 0.25rem 0 rgba(0,0,0,0.05))
  border 1px solid #ECEDEF
  background-color white
  border-radius 3px
  padding 0.5rem 1rem
  margin-bottom 1rem
  h3
    font-size 18px
    a
      color #333

.tc 
  text-align center

.idea-left
  min-width 48px
  text-align center
  vertical-align middle
  padding 2rem 0

.hearted
  .glyphicon-heart
    display inline-block !important
  .glyphicon-heart-empty
    display none !important

.heart-it
  display inline-block
  cursor pointer
  .glyphicon-heart
    display none
  &:hover
    .glyphicon-heart
      display inline-block
    .glyphicon-heart-empty
      display none
  span
    margin-left 0.2rem
    margin-top 0.2rem
    vertical-align middle
  i 
    font-size 20px
    vertical-align middle

.idea-center
  padding-left 10px
  padding-top 1rem
  padding-bottom 1rem
  overflow hidden
  h3
    margin-bottom 0.5rem

.idea-description
  height 2rem
  overflow hidden

.idea-title
  font-size 24px

.idea-hearts
  margin-top 10px

.idea-avatar
  img 
    border 1px solid #ccc
    border-radius 50%
  .idea-hearts-people
    display inline-block
  a:hover
    text-decoration none
    color #333

.idea-timeago
  line-height 32px

.idea-author
  margin-bottom 20px
  span
    margin-left 12px

.idea-heart-area
  border 1px solid #f3f4f5
  border-radius 3px
  padding .5rem 1rem
  span
    display block
    text-align center

.comments 
  border-top 1px solid #f3f4f5
  padding 0 15px 0 15px

.comment-add-area
  border-top 1px solid #f3f4f5
  padding 20px 15px

.comment-header
  font-size 13px
  .comment-username
    font-weight bold

.comment
  padding 15px
  border-left 4px solid #f0f0f0
  position relative
  left 15px
  padding-left 30px

.comment-content
  margin-top 5px
  font-size 14px !important

.comment-avatar
  position absolute
  left -18px
  top 18px
  img
    border-radius 50%
    border 1px solid #ccc

.idea-reply
  cursor pointer
  &:hover
    color #4183c4

.dot
  &:before
    content 'Â·'
    margin 0 5px

.main
  min-height 100vmin
  padding-bottom 30px

.load
  display none
  cursor pointer
  margin 20px auto
  border-radius 3px
  box-shadow(0 0 0.25rem 0 rgba(0,0,0,0.05))
  border 1px solid #ECEDEF
  background-color white
  text-height 38px
  &:hover
    background-color #FCFCFC
  text-align center

.userinfo-name
  margin 10px 0

.idea-comments-count
  &:hover
    color #8B909A !important

.idea-right
  padding 1rem 0
  .idea-comments-count
    padding 1rem
    &:hover
      text-decoration none
  .idea-right-author
    padding .85rem

.emptystate
  font-size 20px
  color #999
  text-align center
  text-shadow 0 0 2px #eee
  padding 20px
  padding-top 30px
  i 
    font-size 34px
    display block
    margin-bottom 5px

.header .navbar-right>li>a.rounded-square
  color white
  padding 0 15px
  border-radius 33px
  background-color #c2c4c9
  text-height 24px
  margin 10px
  font-size 13px
  &:hover
    background-color #8B909A !important
    border-bottom none

.header .navbar-right>li>a.has-notie
  background-color #EC3750
  &:hover
    background-color @background-color !important
    border-bottom none

.notification
  border-bottom 1px solid #e2e2e2
  padding 10px 0
  &:last-child
    border-bottom none
  .notification-content
    margin-top 10px
    padding 10px 20px
    background-color #f0f0f0

.page-banner
  text-align center
  .slogan
    font-size 30px
  .description
    font-size 20px

.page-content
  h3
    margin 20px 0

.spinner
  position fixed
  right 10px
  top 6px


@media (max-width: 768px)
  .navbar-nav
    margin 0
    float right
    li 
      float left